<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<div id="<%= dom_id bill %>">  
  <div class="container-fluid page-container bg-light">
    <div class="row px-5 py-2 pt-5">
      <div class="col-md-8 page-heading">
        <h3 class="animate-charcter">Bills</h3>
      </div>
    </div>
    <div class="row px-5 pb-2">
      <div class="card bg-white mb-2 ">
        <div class="card-body">
          <div class="col-md-9">
            <div class="row">
            <div class="col-md-4">
              <div class="row p-3">
                <div class="row attribute-label">
                  Type
                </div>
                <div class= "row attribute-value">
                  <%=bill.bill_type%>
                </div>
              </div>
              <div class="row p-3">
                <div class="row attribute-label">
                  Amount
                </div>
                <div class= "row attribute-value">
                  <%=bill.amount%>
                </div>
              </div>
              <div class="row p-3">
                <div class="row attribute-label">
                  Employee
                </div>
                <div class= "row attribute-value">
                  <%= bill.submitted_by.first_name.capitalize + " "+ bill.submitted_by.last_name.capitalize %>
                </div>
              </div>
            </div>
            </div>
            
            </div>
          </div>
      <br/>
      </div>
      
      </div>