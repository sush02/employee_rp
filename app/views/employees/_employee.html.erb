<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<div id="<%= dom_id employee %>">  
  <div class="container-fluid page-container bg-light">
    <div class="row px-5 py-2 pt-5">
      <div class="col-md-8 page-heading">
        <h3 class="animate-charcter">Employee Details</h3>
      </div>
      <div class="col-md-4">
        <%= link_to "Edit this employee", edit_employee_path(employee.id), class: "button-edit" %> 
      </div>
    </div>
    <div class="row px-5 pb-2">
      <div class="card bg-white mb-2 ">
        <div class="card-body">
          <div class="row">
          <div class="col-md-3 p-4 dp-box">
            <%= image_tag("avatar.png", class: "img-fluid float-start profile-picture", alt: "Profile Picture" ) %>
          </div>
          <div class="col-md-9">
            <div class="row">
            <div class="col-md-4">
              <div class="row p-3">
                <div class="row attribute-label">
                  First Name
                </div>
                <div class= "row attribute-value">
                  <%=employee.first_name%>
                </div>
              </div>
              <div class="row p-3">
                <div class="row attribute-label">
                  Last Name
                </div>
                <div class= "row attribute-value">
                  <%=employee.last_name%>
                </div>
              </div>
              <div class="row p-3">
                <div class="row attribute-label">
                  Email
                </div>
                <div class= "row attribute-value">
                  <%=employee.email%>
                </div>
              </div>
              <div class="row p-3">
                <div class="row attribute-label">
                  Designation
                </div>
                <div class= "row attribute-value">
                  <%=employee.designation%>
                </div>
              </div>
              <div class="row p-3">
                <div class="row attribute-label">
                  Created At
                </div>
                <div class= "row attribute-value">
                  <%=employee.created_at%>
                </div>
              </div>
              <div class="row p-3">
                <div class="row attribute-label">
                  Updated At
                </div>
                <div class= "row attribute-value">
                  <%=employee.updated_at%>
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>
        
        </div>
      </div>
      <br/>
    </div>
  